[ui]
ssh = ssh -q -C
username = Brodie Rao <me+hg@dackz.net>

[defaults]
incoming = -v
log = -v
outgoing = -v
qseries = -v
tip = -v

[diff]
git = True
showfunc = True

[hooks]
commit.diffstat = python:~/.hgext/diffstathook.py:diffstat
changegroup.diffstat = python:~/.hgext/diffstathook.py:diffstat

[merge-tools]
mergevim.executable = vim
mergevim.args = -d $local $other $base
mergevim.checkchanged = true

[extensions]
bookmarks =
color = ~/.hgext/color.py
convert =
extdiff =
gpg =
graphlog =
highlight =
mq =
pager =
patchbomb =
pbranch = ~/.hgext/pbranch.py
rebase =
record =
transplant =

[alias]
last = log --limit=5

[bookmarks]
track.current = True

[color]
diff.deleted = red bold

[email]
from = Brodie Rao <dackze@gmail.com>

[extdiff]
cmd.vimdiff = vim
opts.vimdiff = -f '+next' '+execute "DirDiff" argv(0) argv(1)'

[pager]
attend = annotate, diff, glog, incoming, last, log, outgoing, qdiff

[smtp]
host = smtp.gmail.com
port = 587
tls = true
username = dackze@gmail.com
