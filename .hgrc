[ui]
merge = hgmergevim
username = Brodie Rao <me+hg@dackz.net>
verbose = True

[extensions]
alias =
cdiff = ~/.hgext/cdiff.py
convert =
extdiff =
graphlog =
highlight =
pager =
record =

[alias]
last = log --limit=5

[cdiff]
color = always

[extdiff]
cmd.vimdiff = vim
opts.vimdiff = -f '+next' '+execute "DirDiff" argv(0) argv(1)'

[pager]
attend = diff, last, log

[web]
style = gitweb
