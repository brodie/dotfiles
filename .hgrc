[ui]
ignore = ~/.hgignore
ssh = ssh -q -C

[defaults]
qseries = -v

[diff]
showfunc = True

[merge-tools]
mergevim.executable = vim
mergevim.args = -d $local $other $base
mergevim.checkchanged = True

[extensions]
bookmarks =
churn =
color =
convert =
extdiff =
gpg =
graphlog =
highlight =
mq =
pager =
parentrevspec =
patchbomb =
progress =
purge =
rebase =
record =
transplant =
remotebranches = ~/.hgext/hg_remotebranches.py
;hgsubversion =

[alias]
dlog = log --style ~/.hgext/map-cmdline.dlog
last = log -l 5
nudge = push -r .
nlog = log --style ~/.hgext/map-cmdline.nlog
qlog = log -pvr qbase:qtip
show = log -pvr
slog = log --style ~/.hgext/map-cmdline.slog
sglog = glog --style ~/.hgext/map-cmdline.sglog
. = summary
, = sglog -vl 30
,+ = sglog -v
- = status

[bookmarks]
track.current = True

[color]
diff.deleted = red bold

[extdiff]
cmd.vimdiff = vim
opts.vimdiff = -f '+next' '+execute "DirDiff" argv(0) argv(1)'

[pager]
attend = annotate, cat, diff, dlog, export, glog, incoming, last, log, nlog,
         outgoing, qdiff, qlog, show, sglog, slog, ",", ",+"

%include .hguser
