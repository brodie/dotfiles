[ui]
ssh = ssh -C
username = Brodie Rao <me+hg@dackz.net>

[defaults]
commit = -v
incoming = -v
log = -v
outgoing = -v
qseries = -v
tip = -v

[diff]
git = True
showfunc = True

[merge-tools]
mergevim.executable = vim
mergevim.args = -d $local $other $base
mergevim.checkchanged = true

[extensions]
alias =
autopager = ~/.hgext/autopager.py
bookmarks =
color = ~/.hgext/color.py
convert =
extdiff =
gpg =
graphlog =
highlight =
mq =
patchbomb =
rebase =
record =
transplant =

[alias]
last = log --limit=5

[autopager]
attend = annotate, diff, glog, incoming, last, log, outgoing, qdiff, tip

[color]
diff.deleted = red bold

[email]
from = Brodie Rao <dackze@gmail.com>

[extdiff]
cmd.vimdiff = vim
opts.vimdiff = -f '+next' '+execute "DirDiff" argv(0) argv(1)'

[smtp]
host = smtp.gmail.com
port = 587
tls = true
username = dackze@gmail.com
