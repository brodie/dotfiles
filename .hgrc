[ui]
ignore = ~/.hgignore
ssh = ssh -q -C
username = Brodie Rao <me+hg@dackz.net>

[defaults]
qseries = -v

[diff]
git = True
showfunc = True

;[hooks]
;commit.diffstat = python:~/.hgext/diffstathook.py:diffstat
;changegroup.diffstat = python:~/.hgext/diffstathook.py:diffstat

[merge-tools]
mergevim.executable = vim
mergevim.args = -d $local $other $base
mergevim.checkchanged = true

[extensions]
bookmarks =
color =
convert =
extdiff =
gpg =
graphlog =
highlight =
mq =
pager =
patchbomb =
progress =
rebase =
record =
transplant =
hgsubversion =

[alias]
last = log --limit=5
slog = log --template '{rev}:{node|short} {desc|firstline}\n'
qlog = log -pvr qbase:qtip

[bookmarks]
track.current = True

[color]
diff.deleted = red bold

[email]
from = Brodie Rao <dackze@gmail.com>

[extdiff]
cmd.vimdiff = vim
opts.vimdiff = -f '+next' '+execute "DirDiff" argv(0) argv(1)'

[pager]
attend = annotate, cat, diff, export, glog, incoming, last, log, outgoing,
	 qdiff, qlog, slog

[smtp]
host = smtp.gmail.com
port = 587
tls = true
username = dackze@gmail.com
